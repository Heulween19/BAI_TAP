        <Label Content="PassWord" FontSize="16" HorizontalAlignment="Left" Height="40" Margin="39,106,0,0" VerticalAlignment="Top" Width="94"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="34" Margin="160,52,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="180"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="45" Margin="160,101,0,0" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="btnLogin" Content="LOGIN" HorizontalAlignment="Left" Height="42" Margin="86,192,0,0" VerticalAlignment="Top" Width="147" Click="btnLogin_Click"/>

    </Grid>
